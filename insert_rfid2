<?php
session_start();

// Set zona waktu
date_default_timezone_set('Asia/Singapore');

// Koneksi ke database
$conn = new mysqli("localhost", "root", "indonesia45", "absensi2");

// Cek koneksi
if ($conn->connect_error) {
    die("Koneksi gagal: " . $conn->connect_error);
}

$absensi_result = "";
$absensi_status = "";
$employee_data = null;

if (isset($_GET['user_id'])) {
    $user_id = $_GET['user_id'];

    // Ambil data pegawai
    $sql = "SELECT * FROM users WHERE user_id = '$user_id'";
    $result = $conn->query($sql);

    if ($result->num_rows > 0) {
        $employee_data = $result->fetch_assoc();
    }
}

// Jika tombol Absen diklik
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $user_id = $_POST['user_id'];
    $tanggal = date("Y-m-d");
    $waktu = date("H:i:s");

    // Cek apakah user sudah absen hari ini
    $cek_absensi = "SELECT * FROM absensi WHERE user_id = '$user_id' AND tanggal = '$tanggal'";
    $result_absensi = $conn->query($cek_absensi);

    if ($result_absensi->num_rows > 0) {
        $absensi_result = "Anda sudah absen hari ini! Tidak dapat absen dua kali.";
        $absensi_status = "error";
    } else {
        // Cek apakah user_id ada di tabel users
        $sql = "SELECT * FROM users WHERE user_id = '$user_id'";
        $result = $conn->query($sql);

        if ($result->num_rows > 0) {
            $employee_data = $result->fetch_assoc();
            $nama = $employee_data['nama'];
            $jabatan = $employee_data['jabatan'];
            $departemen = $employee_data['departemen'];
            $foto = !empty($employee_data['foto']) ? "../uploads/" . $employee_data['foto'] : "../uploads/default.jpg";
            $start_time = $employee_data['start_time'];
            $batas_waktu_absen = $employee_data['batas_waktu_absen'];
            $whatsapp = $employee_data['telepon']; // ambil nomor WA dari database

            // Tentukan status absensi
            if ($waktu >= $start_time && $waktu <= $batas_waktu_absen) {
                $status = "Hadir";
            } else {
                $status = "Terlambat";
            }

            // Simpan ke database
            $sql_absen = "INSERT INTO absensi (user_id, tanggal, waktu, status)
                          VALUES ('$user_id', '$tanggal', '$waktu', '$status')";

            if ($conn->query($sql_absen) === TRUE) {
                $absensi_result = "Absensi berhasil!";
                $absensi_status = "success";

                // Kirim pesan WhatsApp sesuai status
if ($status === "Hadir") {
    $pesan = "Selamat pagi Bapak/Ibu,
Kami sampaikan informasi bahwa putra/putri Bapak/Ibu, $nama, telah melakukan absensi pada $tanggal pukul $waktu dengan status Hadir.
Mohon kiranya Bapak/Ibu dapat memberikan perhatian dan bimbingan agar yang bersangkutan dapat lebih konsisten ke depannya, terima kasihüòäüôå.";
} elseif ($status === "Terlambat") {
    $pesan = "Selamat pagi Bapak/Ibu,
Kami sampaikan informasi bahwa putra/putri Bapak/Ibu, $nama, telah melakukan absensi pada $tanggal pukul $waktu dengan status terlambat.
Mohon kiranya Bapak/Ibu dapat memberikan perhatian dan bimbingan agar yang bersangkutan dapat lebih disiplin ke depannya, terima kasihüòäüôå.";
} else {
    $pesan = "Halo $nama, absensi Anda pada $tanggal pukul $waktu berhasil dicatat dengan status: $status.";
}

// Encode dan kirim ke WhatsApp API
$pesan_encoded = urlencode($pesan);
$whatsapp_api_url = "https://whatsapi.biz.id/api/send-message?phone=" . urlencode($whatsapp) . "&text=$pesan_encoded&apikey=junior";

// Kirim pesan via cURL
$ch = curl_init();
curl_setopt($ch, CURLOPT_URL, $whatsapp_api_url);
curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);
$wa_response = curl_exec($ch);
curl_close($ch);

                // file_put_contents("wa_log.txt", $wa_response . PHP_EOL, FILE_APPEND);
            } else {
                $absensi_result = "Gagal menyimpan absensi: " . $conn->error;
                $absensi_status = "error";
            }
        } else {
            $absensi_result = "User ID tidak ditemukan!";
            $absensi_status = "error";
        }
    }
}
